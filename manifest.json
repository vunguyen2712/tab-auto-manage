{
  "name": "Smarter Tab",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Smarter Tab will save and close your inactive tabs automatically for you, free your computer's memory",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["./src/js-lib/jquery-3.2.1.min.js", "./src/bg/background.js"],
    "persistent": false
  },
  "options_page": "src/extension-page/auto-closed-history.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Smarter Tab",
    "default_popup": "src/browser-action/browser-action.html"
  },
  "permissions": [
    "alarms",
    "background",
    "storage",
    "tabs"
  ]
}
